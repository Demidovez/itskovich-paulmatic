{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "ES6"],
    "types": ["node"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ES6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
        "~src/*": ["src/*"],
    },
  },
  "include": ["**/*.ts", "**/*.tsx", "./**/*.tsx"],
  "exclude": ["node_modules"],
}
